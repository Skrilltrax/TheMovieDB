<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="movieData"
            type="me.skrilltrax.themoviedb.model.list.ListResultItem" />
        <variable
            name="isMovie"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_height="160dp">

        <ImageView
            android:id="@+id/movieImage"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            posterImageUrl="@{movieData.posterPath}"
            android:translationZ="3dp"
            app:layout_constraintStart_toStartOf="@id/movieCard"
            app:layout_constraintBottom_toBottomOf="@id/movieCard" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/movieCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="130dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#222524"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="10dp" />


        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{movieData.title}"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@android:color/white"
            android:ellipsize="marquee"
            android:elevation="1dp"
            app:layout_constraintTop_toTopOf="@id/movieCard"
            app:layout_constraintBottom_toTopOf="@id/releaseDate"
            app:layout_constraintStart_toEndOf="@id/movieImage"
            app:layout_constraintEnd_toEndOf="@id/movieCard"
            tools:text="Movie Title" />

        <TextView
            android:id="@+id/releaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{@string/release_date_s(movieData.releaseDate)}"
            android:textStyle="bold"
            android:textColor="#8d8d8d"
            android:ellipsize="marquee"
            android:elevation="1dp"
            app:layout_constraintTop_toBottomOf="@id/movieTitle"
            app:layout_constraintBottom_toTopOf="@id/divider"
            app:layout_constraintStart_toEndOf="@id/movieImage"
            tools:text="Release Date : %s" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#8d8d8d"
            android:layout_margin="8dp"
            android:elevation="1dp"
            app:layout_constraintStart_toEndOf="@id/movieImage"
            app:layout_constraintEnd_toEndOf="@+id/movieCard"
            app:layout_constraintTop_toTopOf="@id/movieCard"
            app:layout_constraintBottom_toBottomOf="@id/movieCard"
            app:layout_constraintVertical_bias="0.66" />

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/ratingBar"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:elevation="1dp"
            android:numStars="5"
            android:isIndicator="true"
            app:rating="@{safeUnbox(movieData.voteAverage)}"
            app:layout_constraintStart_toStartOf="@id/divider"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintEnd_toStartOf="@id/ratingText"
            app:layout_constraintBottom_toBottomOf="@id/movieCard"
            style="@style/Widget.MaterialRatingBar.RatingBar.Indicator" />

        <TextView
            android:id="@+id/ratingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@{movieData.voteAverage.toString()}"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:elevation="1dp"
            app:layout_constraintStart_toEndOf="@id/ratingBar"
            app:layout_constraintTop_toTopOf="@id/ratingBar"
            app:layout_constraintEnd_toEndOf="@id/movieCard"
            app:layout_constraintBottom_toBottomOf="@id/ratingBar" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>