<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_height="180dp">

    <ImageView
            android:id="@+id/movieImage"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            android:translationZ="3dp"
            app:layout_constraintStart_toStartOf="@id/movieCard"
            app:layout_constraintBottom_toBottomOf="@id/movieCard"
    />

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/movieCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="140dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#222524"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="10dp"
    />


    <TextView
            android:id="@+id/movieTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="placeholer text"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:ellipsize="marquee"
            android:elevation="1dp"
            app:layout_constraintTop_toTopOf="@id/movieCard"
            app:layout_constraintBottom_toTopOf="@id/releaseDate"
            app:layout_constraintStart_toEndOf="@id/movieImage"
            app:layout_constraintEnd_toEndOf="@id/movieCard"
            tools:text="Movie Title"
    />

    <TextView
            android:id="@+id/releaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Release Date : %s"
            android:textStyle="bold"
            android:textColor="#8d8d8d"
            android:ellipsize="marquee"
            android:elevation="1dp"
            app:layout_constraintTop_toBottomOf="@id/movieTitle"
            app:layout_constraintBottom_toTopOf="@id/divider"
            app:layout_constraintStart_toEndOf="@id/movieImage"
            tools:text="Release Date : %s"
    />

    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#8d8d8d"
            android:layout_margin="8dp"
            android:elevation="1dp"
            app:layout_constraintStart_toEndOf="@id/movieImage"
            app:layout_constraintEnd_toEndOf="@+id/movieCard"
            app:layout_constraintTop_toTopOf="@id/movieCard"
            app:layout_constraintBottom_toBottomOf="@id/movieCard"
            app:layout_constraintVertical_bias="0.66"
    />

    <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/ratingBar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="55dp"
            android:paddingStart="20dp"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:elevation="1dp"
            app:layout_constraintStart_toStartOf="@id/movieImage"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintEnd_toStartOf="@id/ratingText"
            app:layout_constraintBottom_toBottomOf="@id/movieCard"
    />

    <TextView
            android:id="@+id/ratingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:elevation="1dp"
            app:layout_constraintStart_toEndOf="@id/ratingBar"
            app:layout_constraintTop_toTopOf="@id/ratingBar"
            app:layout_constraintEnd_toEndOf="@id/movieCard"
            app:layout_constraintBottom_toBottomOf="@id/ratingBar"
    />


</androidx.constraintlayout.widget.ConstraintLayout>